{
  "manifest_version": 3,
  "name": "YouTube Live",
  "version": "2.0",
  "description": "YouTube Live is a Chrome extension that shows your favorite YouTube LIVE channels in a popup.",
  "permissions": ["activeTab", "storage", "alarms"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "css/icon.png",
    "48": "css/icon.png",
    "128": "css/icon.png"
  }
}
